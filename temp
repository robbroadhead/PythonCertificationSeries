while count < int(value):
    count = count + 1
    print(greeting.format(count) + "\n")
else:
    print("\nLoop Complete.\n")

# infinite loop
count = 1
flag = True
while flag:
    count = count + 1
    if count < 10:
        print(count)
        continue

    print("Check if complete")
    if count > 15:
        flag = False
else:
    print("Count:" + str(count))

# Example of break note break skips an else
while True:
    count = count + 1
    if count > 100:
        break

for x in day_arr:
    print(str(x) + " is in mid-day array")

sum = 0
for x in range(0):
    sum = sum + x
else:
    print(str(sum))

for x in range(1,5):
    print(str(x) + " is in the range")

